<h2>Movies</h2>
<ul>
    {{#each movie}}
    <li><a href="/movies/{{_id}}">{{title}}</a></li>
    <form action="/movies/{{_id}}/delete" method="POST">
        <button type="submit">Delete</button>
    </form>
    <a href="/movies/edit?movieid={{_id}}">Edit</a>
    {{/each}}
</ul>

<a href="/movies/new">New</a>